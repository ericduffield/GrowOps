<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GrowOps.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">



            <Entry Placeholder="email" x:Name="entryEmail"/>
            <Entry Placeholder="password" x:Name="entryPassword" IsPassword="True"/>
            <Button Text="Login" x:Name="btnLogin" Clicked="BtnLogin_Clicked" />

            <Button x:Name="btnSignUp" Text="New? Click to Sign Up" Clicked="BtnSignUp_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
